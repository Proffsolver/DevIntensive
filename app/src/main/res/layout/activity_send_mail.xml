<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_medium_42"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_small_8"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:layout_marginLeft="@dimen/spacing_small_8"
            android:layout_marginRight="@dimen/spacing_small_8"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_medium_42"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="bottom">
                <EditText
                    android:id="@+id/mailaddr_et"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.90"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_normal_15"
                    android:text="mail@mymail.com"
                    android:textColor="@color/black"

                    android:textColorHint="@color/grey"
                    android:layout_marginLeft="@dimen/spacing_medial_24"

                    android:focusable="true"/>
                <ImageView
                    android:layout_weight="0.10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:id="@+id/mailsend"
                    android:src="@drawable/ic_send_black_24dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_medium_42"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_small_8"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:layout_marginLeft="@dimen/spacing_small_8"
            android:layout_marginRight="@dimen/spacing_small_8"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_medium_42"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="bottom">
                <EditText
                    android:id="@+id/mailsubj_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_normal_15"
                    android:text="Тема"

                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:layout_marginLeft="@dimen/spacing_medial_24"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_small_8"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:layout_marginLeft="@dimen/spacing_small_8"
            android:layout_marginRight="@dimen/spacing_small_8"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="bottom">
                <EditText
                    android:id="@+id/mailtext_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_normal_15"
                    android:inputType="textMultiLine"
                    android:lines="7"
                    android:text="Текст"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:layout_marginLeft="@dimen/size_small_24"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>