<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/stat_li"
    android:orientation="horizontal"
    android:background="@color/grey"
    android:layout_height="112dp"
    android:gravity="center"
    app:layout_behavior=".ui.behaviors.UserInfoBehavior"
    app:behavior_min_height="56dp"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:orientation="vertical"
        android:background="@color/grey">
        <TextView
            android:id="@+id/user_info_rait_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:textAlignment="center"
            android:textSize="@dimen/font_large_24"
            android:text="5"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small_8"
            android:textSize="@dimen/font_small_12"
            android:textAlignment="center"
            android:text="Рейтинг"
            android:textColor="@color/white"/>
    </LinearLayout>
    <View
        android:layout_width="@dimen/line_size"
        android:layout_height="match_parent"
        android:background="@color/grey_light"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.50"
        android:background="@color/grey">
        <TextView
            android:id="@+id/user_info_code_lines_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:textSize="@dimen/font_large_24"
            android:textAlignment="center"
            android:text="5"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small_8"
            android:textSize="@dimen/font_small_12"
            android:textAlignment="center"
            android:text="Написано строк кода"
            android:textColor="@color/white"/>
    </LinearLayout>
    <View
        android:layout_width="@dimen/line_size"
        android:layout_height="match_parent"
        android:background="@color/grey_light"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.25"
        android:background="@color/grey">
        <TextView
            android:id="@+id/user_info_projects_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:textSize="@dimen/font_large_24"
            android:textAlignment="center"
            android:text="5"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small_8"
            android:textSize="@dimen/font_small_12"
            android:textAlignment="center"
            android:text="Проектов"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>